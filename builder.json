
{
  "name": "smithy-swift",
  "needs_compiler": false,
  "packages": [],
  "variables": {
    "gradlew": "{source_dir}/gradlew -p {source_dir}"
  },
  "test_steps": [
    "cd {source_dir} && swift test"
  ],
  "build_steps": [
    "{gradlew} build",
    "cd {source_dir} && swift build"
  ],
  "post_build_steps": [
    "{gradlew} publishToMavenLocal"
  ],
  "build_dir": "target/build",
  "downstream": [
    { "name": "aws-sdk-swift" }
  ],
  "upstream": [
    { "name": "aws-crt-swift" }
  ],    
  "hosts": {
    "ubuntu": {
      "packages": [
        "openjdk-8-jdk-headless"
      ]
    },
    "debian": {
      "packages": [
        "openjdk-8-jdk-headless"
      ]
    }
  }
}
